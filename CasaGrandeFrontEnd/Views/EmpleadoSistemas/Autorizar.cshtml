@{
    ViewData["Title"] = "LoginView";
}

@model ClinicaEspacioAbiertoFrontEnd.Models.Entidades.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>


        *, *::before, *::after {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden; /* Asegura que no haya scroll */
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        }

        .error-message {
            color: red;
            margin-top: 10px;
            text-align: center; /* Centra el mensaje de error */
        }

        h1, h3, p {
            color: dimgray;
        }
    </style>
    <style>
        .background-radial-gradient {
            background: -webkit-linear-gradient(270deg, #617970,#004961,#0f0d42); 
            background: linear-gradient(270deg, #617970,#004961,#0f0d42); 
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
            display: inline-block;
            animation: rotar 4s infinite linear;
        }

        keyframes rotar {
            from

        {
            transform: rotateX(360deg); /* Rotación inicial: 360 grados en el eje X */
        }

        to {
            transform: rotateX(0deg); /* Rotación final: 0 grados en el eje X */
        }

        }
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }

        .loading-overlay {
            position: fixed; /* Asegura que siempre esté en la misma posición */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Fondo gris translúcido */
            z-index: 9999; /* Asegura que esté por encima de otros elementos */
            display: flex;
            justify-content: center;
            align-items: center;
        }

            /* Ocultar el ícono inicialmente */
            .loading-overlay img {
                max-width: 100px; /* Ajusta el tamaño del ícono si es necesario */
            }
    </style>
</head>
    <body>
    <div id="loading" style="display:none;" class="loading-overlay">
        <!-- Aquí va el icono de carga o animación -->
        <img src="~/assets/loading.gif" alt="Cargando..." />
    </div>
    <section class="background-radial-gradient overflow-hidden align-items-center">
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        Sistema de gestion <br />
                        <span style="color: hsl(218, 81%, 75%)">Clinica espacio abierto</span>
                    </h1>
                    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                        Bienvenidos/as al nuevo sistema de gestion de clinica espacio abierto. <br />
                        Puedes iniciar sesión ingresando tu cedula y la contraseña brindada por el equipo.
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                    <div class="card bg-glass">
                        <div class="card-body px-4 py-5 px-md-5">
                            <h1>Ingrese sus datos</h1>
                            <form asp-action="Autorizar" method="post">
                                <!-- Email input -->
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="text" id="Cedula" name="Cedula" class="form-control" />
                                    <label class="form-label" for="Cedula">Cedula</label>
                                </div>

                                <!-- Password input -->
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="password" id="Password" name="Password" class="form-control" />
                                    <label class="form-label" for="Password">Contraseña</label>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" id="submitBtn" class="btn btn-primary btn-block mb-2">Ingresar</button>
                                <div class="error-message">@ViewData["Error"]</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            // Mostrar el ícono de carga
            document.getElementById("loading").style.display = "block";

            // Deshabilitar el botón para evitar múltiples envíos
            document.getElementById("submitBtn").disabled = true;
        });
    </script>
</body>
</html>
