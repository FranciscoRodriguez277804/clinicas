@model ClinicaEspacioAbiertoFrontEnd.Models.Entidades.Convenio

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre de usuario</th>
            <th>Nombre de convenio</th>
            <th>Motivo</th>
            <th>Presupuesto</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.usuarios)
        {
            <tr style="background-color:black; color:white">
                <td>@usuario.nombre_usuario</td>
                <td>@usuario.convenio</td>
                <td>@usuario.motivo</td>
                <td>@usuario.presupuesto</td>
                <td>@usuario.status</td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(ViewBag.CurrentPage - 1))" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("DetallesConvenio", new { nombreConvenio = ViewBag.Titulo, page = i })">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("DetallesConvenio", new { nombreConvenio = ViewBag.Titulo, page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>